fn int get_level(int exp)
{
    for (int i = 2; i < EXPERIENCE_TABLE.len; ++i)
    {
        if (exp < EXPERIENCE_TABLE[i] && exp >= EXPERIENCE_TABLE[i - 1])
        {
            return i - 1;
        }
    }
    return EXPERIENCE_TABLE.len - 1;
}
